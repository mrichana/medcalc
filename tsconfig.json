{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "watch": true,
        "sourceMap": true,
        "outDir": "./app/scripts/build/"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./app/typescript/app.ts",
        "./app/typescript/controllers.ts",
        "./app/typescript/directives.ts",
        "./app/typescript/filters.ts",
        "./app/typescript/services.ts",
        "./app/typescript/views/BMI.ts",
        "./app/typescript/views/BSA.ts",
        "./app/typescript/views/Calc.ts",
        "./app/typescript/views/GFR.ts",
        "./app/typescript/views/GlasgowComaScale.ts",
        "./app/typescript/views/views.ts",
        "./app/typings/angularjs/angular-animate.d.ts",
        "./app/typings/angularjs/angular-route.d.ts",
        "./app/typings/angularjs/angular-sanitize.d.ts",
        "./app/typings/angularjs/angular.d.ts",
        "./app/typings/jquery/jquery.d.ts",
        "./app/typings/underscore/underscore.d.ts"
    ]
}
